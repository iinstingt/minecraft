DEPTH = 100
TORCH = 10
t = turtle

step = 0
toTorch = TORCH
while step <= DEPTH do
	if t.getFuelLevel()<DEPTH then
		if t.getItemCount(3)<DEPTH/100 then
			print("Fuel is empty")
			print("For start need ", DEPTH, " fuel level (", DEPTH/100, " coal), ",DEPTH/TORCH," torchs and 10 chests")
			break
		else
			t.select(3)
			t.refuel()
		end
	end
	if t.getItemCount(1)<10 or t.getItemCount(2)<DEPTH/TORCH then
		print("Not enouth items.")
		print("For start need ", DEPTH, " fuel level (", DEPTH/100, " coal on 3-rd slot), ",DEPTH/TORCH," torchs on 2-nd slot and 10 chests on 1-st slot")
		break
	end
	t.dig()
	t.forward()
	step = step + 1
	toTorch = toTorch -1
	if toTorch == 0 then 
		if t.getItemCount(2)<2 then
			print("Ended torches")
			break
		end
		toTorch = TORCH
		t.turnLeft()
		t.dig()
		t.select(2)
		t.place()
		t.turnRight()
	end
	t.digUp()
	t.digDown()
	if t.getItemSpace(16)<64 then
		if t.getItemCount(1)<2 then
			print("Ended chests")
			break
		end
		t.select(1)
		t.turnLeft()
		t.turnLeft()
		t.place()
		for i=3, 16 do 
			t.select(i)
			t.drop()
		end
		t.turnLeft()
		t.turnLeft()
		t.select(3)
	end
end